<% if (locals.user) {%>
  <div class="container">
  <h4>Add an interview </h4>

  <form class="" action="/interview/create" method="POST">

    <div class="">
      <label for="company" class="form-label">Company</label>
      <input type="text" class="form-control" placeholder="Enter company name" id="company" name="company" required />
    </div>

    <div class="">
      <label for="date" class="form-label">Date</label>
      <input type="date" class="form-control" placeholder="Enter interview date" id="date" name="date" required />
    </div>

    <div class="">
      <button type="submit" class="btn btn-primary">Add interview</button>
    </div>

  </form>
</div>
</div>

<%} %>
